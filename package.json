{
  "name": "aicodereview-cli",
  "private": false,
  "version": "1.5.8",
  "description": "AI-powered code review tool with web interface",
  "keywords": [
    "code-review",
    "ai",
    "gemini",
    "claude",
    "static-analysis",
    "cli"
  ],
  "author": "HainanZhao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HainanZhao/AICodeReview.git"
  },
  "homepage": "https://github.com/HainanZhao/AICodeReview#readme",
  "bugs": {
    "url": "https://github.com/HainanZhao/AICodeReview/issues"
  },
  "bin": {
    "acr": "./dist/index.js",
    "aicodereview": "./dist/index.js"
  },
  "files": [
    "dist/",
    "frontend/package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:standalone\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:standalone": "node dist/index.js --api-only --port 5959",
    "build": "npm run build:cli && npm run build:frontend",
    "build:cli": "tsc -p cli/tsconfig.json",
    "build:watch": "tsc -p cli/tsconfig.json --watch",
    "build:frontend": "AICR_SUB_PATH=${AICR_SUB_PATH:-} cd frontend && npm run build",
    "clean": "npm run clean:cli && npm run clean:frontend",
    "clean:cli": "rm -rf dist",
    "clean:frontend": "cd frontend && npm run clean",
    "dev": "concurrently \"npm run start:frontend\" \"npm run dev:standalone\"",
    "dev:cli": "tsx cli/index.ts",
    "dev:standalone": "tsx cli/index.ts --api-only --port 5959",
    "dev:watch": "concurrently \"npm run start:frontend\" \"npm run build:watch\" \"npm run start:standalone\"",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "pack:test": "npm pack --dry-run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@clack/prompts": "^0.11.0",
    "@google/generative-ai": "^0.24.1",
    "@types/react": "^19.1.15",
    "commander": "^12.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "ink": "^6.3.1",
    "inquirer": "^9.2.23",
    "react": "^19.1.1",
    "semver": "^7.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.17.1",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "http-proxy-middleware": "^3.0.5",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
