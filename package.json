{
  "name": "aicodereview-cli",
  "private": false,
  "version": "1.1.3",
  "description": "AI-powered code review tool with web interface",
  "keywords": [
    "code-review",
    "ai",
    "gemini",
    "claude",
    "static-analysis",
    "cli"
  ],
  "author": "HainanZhao",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HainanZhao/AICodeReview.git"
  },
  "homepage": "https://github.com/HainanZhao/AICodeReview#readme",
  "bugs": {
    "url": "https://github.com/HainanZhao/AICodeReview/issues"
  },
  "bin": {
    "aicodereview": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "dist/",
    "backend/dist/",
    "frontend/package.json",
    "shared/dist/",
    "shared/package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm run start",
    "build": "npm run build:shared && npm run build:cli && npm run build:frontend && npm run build:backend",
    "build:shared": "cd shared && npm run build",
    "build:cli": "tsc -p cli/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "clean": "npm run clean:shared && npm run clean:cli && npm run clean:frontend && npm run clean:backend",
    "clean:shared": "cd shared && rm -rf dist",
    "clean:cli": "rm -rf dist",
    "clean:frontend": "cd frontend && npm run clean",
    "clean:backend": "cd backend && npm run clean",
    "dev": "npm run build:shared && concurrently \"npm run dev:shared\" \"npm run start:frontend\" \"npm run start:backend\"",
    "dev:shared": "cd shared && npm run watch",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "pack:test": "npm pack --dry-run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "@google/generative-ai": "^0.24.1",
    "aicodereview-shared": "^1.0.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "inquirer": "^9.2.23",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
