{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "../dist",
    "rootDir": "."
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist",
    "../backend/dist"
  ]
}
